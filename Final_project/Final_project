---
- hosts: test_deploy
  tasks:
   - name: "apt update"
     shell : apt update

   - name: "apt upgrade"
     shell : apt upgrade -y

   - name:  "apche"
     shell : apt install apache2 -y

   - name:  "clone"
     shell : git clone https://github.com/WordPress/WordPress.git

   - name:  "cd"
     shell : cd WordPress/

   - name:  "cp"
     shell : cp -R * /var/www/html/

   - name:  "php"
     shell : apt-get install php libapache2-mod-php php-mysql php-curl php-gd php-mbstring php-xml php-xmlrpc php-soap php-intl php-zip -y

   - name:  "sql"
     shell : apt install mysql-server mysql-client -y

